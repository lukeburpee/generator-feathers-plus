// banner.<%- js %> - Console Banner
<%- tplImports('chalk', null, 'req') %>
<%- tplImports('figlet', null, 'req') %>
<%- insertFragment('imports') %>
<%- insertFragment('init') %>

<%- tplExport('function () {', 'function (): void {') %>
  console.log(chalk[`<%- specs.banner.titleColor %>`](
  	figlet.textSync(`<%- specs.banner.title %>`, {
  		horizontalLayout: 'full'
  	})
  ))
<%# --- if-1 starts below. -%>
<% if (specs.banner.subheader) { -%>
  console.log(chalk.bold[`<%- specs.banner.subheaderColor %>`](`<%- specs.banner.subheaderText %>`))
<% } -%>
<%# --- if-1 ends above. -%>
  console.log('')
  <%- insertFragment('func_init') %>
  <%- insertFragment('more') %>
}<%- tplJsOnly([sc]) %>